# TrendCast 環境変数テンプレート
# 本ファイルをコピーして .env ファイルを作成し、適切な値を設定してください

# =================================
# Server Configuration（サーバー設定）
# =================================
PORT=3001
NODE_ENV=development

# =================================
# Authentication（認証設定）
# =================================
# Basic認証のユーザー情報（カンマ区切り）
# 形式: username1:password1,username2:password2,username3:password3
AUTH_USERS=user1:password1,user2:password2,user3:password3

# =================================
# J-Quants API Configuration
# =================================
# J-Quants API認証情報
JQUANTS_API_MAIL=your-email@example.com
JQUANTS_API_PASSWORD=your-password

# J-Quants APIリフレッシュトークン（認証後に自動設定される）
JQUANTS_REFRESH_TOKEN=

# J-Quants APIベースURL
JQUANTS_API_BASE_URL=https://api.jquants.com

# =================================
# OpenAI API Configuration
# =================================
# OpenAI APIキー
OPENAI_API_KEY=sk-your-openai-api-key-here

# 使用するGPTモデル（gpt-4, gpt-3.5-turbo等）
OPENAI_MODEL=gpt-4

# OpenAI API組織ID（オプション）
OPENAI_ORGANIZATION_ID=

# =================================
# Rate Limiting Configuration（レート制限設定）
# =================================
# レート制限ウィンドウ（ミリ秒）
RATE_LIMIT_WINDOW_MS=60000

# レート制限最大リクエスト数
RATE_LIMIT_MAX_REQUESTS=100

# J-Quants APIリクエスト間隔（ミリ秒、最小1000必須）
JQUANTS_REQUEST_INTERVAL=1000

# OpenAI APIリクエスト間隔（ミリ秒）
OPENAI_REQUEST_INTERVAL=500

# =================================
# Cache Configuration（キャッシュ設定）
# =================================
# 株価データキャッシュ有効期間（分）
STOCK_DATA_CACHE_TTL=60

# AI予測キャッシュ有効期間（分）
PREDICTION_CACHE_TTL=5

# =================================
# Logging Configuration（ログ設定）
# =================================
# ログレベル（error, warn, info, debug）
LOG_LEVEL=info

# ログファイル出力ディレクトリ
LOG_DIR=logs

# =================================
# Development Configuration（開発設定）
# =================================
# デバッグモード（true/false）
DEBUG=false

# APIレスポンスの詳細ログ出力（true/false）
LOG_API_RESPONSES=false

# CORS設定（開発時のクライアントURL）
CORS_ORIGIN=http://localhost:3000